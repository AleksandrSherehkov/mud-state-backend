generator client {
  provider = "prisma-client-js"
 
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String     @id @default(cuid())
  email      String     @unique
  password   String
  refreshTokenHash String?
  characters Character[]
  createdAt  DateTime   @default(now())
}

model Character {
  id         String   @id @default(cuid())
  name       String
  race       String
  class      String
  stats      Json
  locationId String
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  createdAt  DateTime @default(now())
}